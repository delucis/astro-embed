---
import { AppBskyEmbedRecord } from "@atproto/api";
import Media from "./media.astro";
import { atUriToPostUri } from "./utils";

interface Props {
  record: AppBskyEmbedRecord.ViewRecord;
}

const { record } = Astro.props;

const postUrl = atUriToPostUri(record.uri);
---

<div class="post-container">
  <div class="user-info">
    <div class="avatar">
      <img src={record.author.avatar} />
    </div>
    <p class="user-text">
      <span class="name">{record.author.displayName}</span>
      <span class="handle">@{record.author.handle}</span>
    </p>
  </div>

  <p class="content">{(record.value as any).text}</p>
  <Media media={record.embeds?.[0]} postUrl={postUrl} compact={true} />
</div>

<style>
  .post-container {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    padding: 0.5rem;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    text-decoration: none;
    color: var(--color-text);
    transition: background-color 0.2s;
  }

  .post-container:hover {
    background-color: var(--color-background-hover);
  }

  .user-info {
    display: flex;
    gap: 0.375rem;
    align-items: center;
  }

  .avatar {
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    overflow: hidden;
    background-color: #d4d4d4;
    flex-shrink: 0;
  }

  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .user-text {
    font-size: var(--font-size-sm);
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
		color: var(--color-text);

  }

  .name {
    font-weight: 700;
		color: var(--color-text);

  }

  .handle {
    color: #666;
    margin-left: 0.25rem;
  }

  .content {
    font-size: var(--font-size-sm);
		color: var(--color-text);
    margin: 0;
  }

  .link-preview {
    width: 100%;
    border: 1px solid #e5e5e5;
    border-radius: 0.5rem;
    overflow: hidden;
    text-decoration: none;
    color: var(--color-text);
    display: flex;
    flex-direction: column;
  }

  .link-content {
    padding: 0.75rem 1rem;
  }

  .domain {
    font-size: 0.875rem;
    color: #666;
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .title {
    font-weight: 600;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .description {
    font-size: 0.875rem;
    color: #666;
    margin: 0.125rem 0 0 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
