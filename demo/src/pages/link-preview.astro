---
import { LinkPreview } from '@astro-community/astro-embed-link-preview';
import Base from '../layouts/Base.astro';
---

<Base title="LinkPreview component example">
	<h2>Default</h2>
	<p>
		<code
			>&lt;LinkPreview id="https://astro.build/blog/welcome-world/" /&gt;</code
		>
	</p>
	<LinkPreview id="https://astro.build/blog/welcome-world/" />

	<h2>(very) Basic Styles</h2>
	<p>
		<code
			>&lt;LinkPreview styled id="https://astro.build/blog/welcome-world/" /&gt;</code
		>
	</p>
	<LinkPreview styled id="https://astro.build/blog/welcome-world/" />

	<h2>Custom size</h2>
	<p>
		<code
			>&lt;LinkPreview imageWidth="200px" imageHeight="105px"
			id="https://astro.build/blog/welcome-world/" /&gt;</code
		>
	</p>
	<LinkPreview
		imageWidth="200px"
		imageHeight="105px"
		id="https://astro.build/blog/welcome-world/"
	/>
</Base>
